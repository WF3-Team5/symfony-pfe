{% extends 'espace_patient_logged_in/index.html.twig' %}

{% block title %}Données Personnelles{% endblock %}

{% block body %}
    <div class="intro" style="padding-top: 5px!important;margin-bottom: 100px!important;" >
        <div class="container">
            <div class="row">
                <div class="col-lg-11 m-auto border border-light rounded shadow-lg p-5">
                    <div class="text-center"><h1>Modifiez vos données personnelles</h1><small>Espace Patient</small></div><br><br>
                    <form class="intro_form" method="post">
                        <div class="align-items-start justify-content-between flex-wrap">
                            <div class="d-flex flex-row align-items-start">
                                <p><div class="col-lg-4 label-dp infos-dp">Numéro de Sécurité S. :</div><div class="col-lg-3 infos-dp"> {{ user.NumeroSecu }}</div></p>
                            </div>
                            {{ form_start(form) }}
                            <div class="d-flex flex-row align-items-start justify-content-between flex-wrap">

                                <div class="col-lg-3">
                                    {{ form_row(form.civility) }}
                                    {{ form_row(form.last_name) }}
                                    {{ form_row(form.birth_name) }}
                                    {{ form_row(form.first_name) }}
                                </div>
                                <div class="col-lg-4">
                                    {{ form_row(form.birth_date) }}
                                    {{ form_row(form.birth_department) }}
                                    {{ form_row(form.place_of_birth) }}
                                    {{ form_row(form.nationality) }}
                                </div>
                                <div class="col-lg-3">
                                    {{ form_row(form.address) }}
                                    {{ form_row(form.postal_code) }}
                                    {{ form_row(form.city) }}
                                    {{ form_row(form.phone_number) }}
                                    {{ form_row(form.mobile_phone_number) }}
                                </div>
                                <div class="col-lg-12">
                                    <p>Vos identifiants</p><br>
                                    {{ form_row(form.email) }}
                                </div>
                                <button type="submit" class="button button_1 intro_button trans_200">Enregistrer</button><br><br>
                            </div>
                            {{ form_end(form) }}
                        </div>

                    </form>
                </div>
            </div>
        </div>
    </div>

{% endblock body %}