{% extends 'espace_patient_logged_in/index.html.twig' %}

{% block title %}Contactez votre praticien{% endblock %}

{% block body %}
    <br>
    <h3>Contactez votre praticien</h3><br><br>

    <div class="row">
        <div class="col-lg-8 m-auto border border-light rounded shadow-lg p-5">
            <form class="intro_form" method="post">
                <div class="d-flex flex-row align-items-start justify-content-between flex-wrap">
                    <label>votre praticien :</label>
                    <select class="intro_input w-100" name="praticien">
                        <option>Praticien 1 </option>
                        <option>Praticien 2 </option>
                        <option>Praticien 3 </option>
                    </select>
                </div>
                <div class="d-flex flex-row align-items-start justify-content-between flex-wrap">
                    <label>Votre message :</label>
                    <textarea rows="50" type="text" name="" class="intro_input w-100" placeholder="Votre message" required></textarea>
                </div>
                <button type="submit" class="button button_1 intro_button trans_200" >Transmettre</button>
                <br>
            </form>
        </div>
    </div><br><br><br>

{% endblock body %}