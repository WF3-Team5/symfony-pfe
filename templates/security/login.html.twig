{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
    <br><br><br><br><br><br><br>
<form method="post" class="intro_form" id="intro_form">
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}
    <div class="intro_form_container">
        <div class="intro_form_title">Espace Connexion</div>

    <label for="inputEmail" class="sr-only">Email</label>
        <input type="email" class="intro_input" placeholder="Votre Email" required="required">
    <label for="inputPassword" class="sr-only">Password</label>
        <input type="password" class="intro_input" placeholder="Votre mot de passe" required="required">

    <input type="hidden" name="_csrf_token"
           value="{{ csrf_token('authenticate') }}"
    >

    {#
        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
        See https://symfony.com/doc/current/security/remember_me.html

        <div class="checkbox mb-3">
            <label>
                <input type="checkbox" name="_remember_me"> Remember me
            </label>
        </div>
    #}
</div>
        <button class="button button_1 intro_button trans_200">connexion</button>

</form>
    <br><br><br><br>
{% endblock %}
