{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
    <br><br><br><br><br><br><br>



    <div class="col-lg-6 intro_col offset-2">
        <div class="intro_form_container">
            <div class="intro_form_title">Connexion Praticien</div>
            <form class="intro_form" method="post">
                {% if error %}
                    <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                {% endif %}

                <div class="d-flex flex-row align-items-start justify-content-between flex-wrap">
                    <input type="email" class="intro_input" placeholder="Votre Email" required="required" name="email">
                    <input type="password" class="intro_input" placeholder="Votre mot de passe" required="required" name="password">
                    <input type="hidden" name="_csrf_token"
                           value="{{ csrf_token('authenticate') }}">
                    {#
                        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
                        See https://symfony.com/doc/current/security/remember_me.html

                        <div class="checkbox mb-3">
                            <label>
                                <input type="checkbox" name="_remember_me"> Remember me
                            </label>
                        </div>
                    #}

                </div>
                <button type="submit" class="button button_1 intro_button trans_200" >Connexion</button>
            </form>
        </div>
    </div>


    <br><br><br><br>
{% endblock %}
