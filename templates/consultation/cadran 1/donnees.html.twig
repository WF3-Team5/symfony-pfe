{% extends 'base.html.twig' %}

{% block body %}
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-6 offset-3">
                <!-- Card 1 -->
                <div class="card shadow mb-4">
                    <div class="card-header py-3">
                        <h6 class="m-0 font-weight-bold text-info text-center">Données Administratives</h6>
                    </div>
                    <div class="card-body">
                        <table class="table table-striped ">
                            {% if user is defined %}
                            <tr class="text-dark">
                                <th>Numéro dossier</th>
                                <td>{{ user.id }}</td>
                            </tr>
                                <tr class="text-dark">
                                    <th>Numéro Sécurité Sociale</th>
                                    <td>{{ user.numeroSecu}}</td>
                                </tr>
                            <tr class="text-dark">
                                <th>Civilité</th>
                                <td>{{ user.civility }}</td>
                            </tr>
                            <tr class=" text-dark">
                                <th>Nom</th>
                                <td>{{ user.lastName }}</td>
                            </tr>
                            <tr class=" text-dark">
                                <th>Prénom</th>
                                <td>{{ user.firstName }}</td>
                            </tr>
                                <tr class="text-dark">
                                    <th>Dâte de naissance</th>
                                    <td>{{ user.birthDate|date('j/m/Y')}}</td>
                                </tr>
                                <tr class="text-dark">
                                    <th>Numéro de téléphone</th>
                                    <td>{{ user.mobilePhoneNumber }}</td>
                                </tr>
                                <tr class=" text-dark">
                                    <th>Adresse Mail</th>
                                    <td>{{ user.email}}</td>
                                </tr>
                                <tr class=" text-dark">
                                    <th>Adresse Postale</th>
                                    <td>{{ user.address }}</td>
                                </tr>
                                <tr class=" text-dark">
                                    <th>Code Postale</th>
                                    <td>{{ user.postalCode }}</td>
                                </tr>
                                <tr class=" text-dark">
                                    <th>Ville</th>
                                    <td>{{ user.city}}</td>
                                </tr>
                                <tr class=" text-dark">
                                    <th>Date d'inscription</th>
                                    <td>{{ user.dateInscription|date('j/m/Y') }}</td>
                                </tr>
                            {% endif %}
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}