{% extends 'base.html.twig' %}

{% block body %}
    <div class="container-fluid">
        {% for label, flashes in app.session.flashbag.all %}
            {% for flash in flashes %}
                {% if ( label == 'success' ) %}
                    <div class="alert alert-success alert-dismissible text-center fade show">
                        {{ flash }}
                    </div>
                {% elseif ( label == 'error' ) %}
                    <div class="alert alert-danger alert-dismissible text-center fade show">
                        {{ flash }}
                    </div>
                {% endif %}
            {% endfor %}
        {% endfor %}

        <div class="col-lg-10 intro_col offset-1">
            <div class="intro_form_container">
                <div class="intro_form_title">Inscription Assistant</div>
                {{ form_start(form, {"class": "intro_input"}) }}

                <div class="d-flex flex-row align-items-start justify-content-between flex-wrap">
                    <div class="col-lg-6">
                        {{ form_row(form.nom) }}
                        {{ form_row(form.prenom) }}
                        {{ form_row(form.email) }}
                        {{ form_row(form.plainPassword) }}
                        {{ form_row(form.plainPassword) }}
                    </div>
                </div>
                <button type="submit" class="button button_1 intro_button trans_200 button-rdv" href="{{ path('app_espacepraticienloggedin_logout') }}">S'inscrire</button>
                {{ form_end(form) }}<br>
            </div>
        </div>
    </div>
{% endblock %}