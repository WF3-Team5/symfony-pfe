{% extends 'basePatient.html.twig' %}

{% block title %}Espace Patient - S'inscrire{% endblock %}

{% block body %}

<div class="intro" style="padding-top: 200px!important;margin-bottom: 100px!important;" >
    <div class="container">
        <div class="row">
            <div class="col-lg-10 m-auto border border-light rounded shadow-lg p-5">
                <div class="text-center"><h1>Inscription</h1><small>Espace Patient</small></div><br><br>
                <form class="intro_form" method="post">
                    <div class="align-items-start justify-content-between flex-wrap">
                        {{ form_start(form) }}
                        <div>
                            {{ form_row(form.numeroSecu) }}
                            {{ form_row(form.civility) }}
                            {{ form_row(form.last_name) }}
                            {{ form_row(form.birth_name) }}
                            {{ form_row(form.first_name) }}<br><hr>
                            {{ form_row(form.birth_date) }}
                            {{ form_row(form.birth_department) }}
                            {{ form_row(form.place_of_birth) }}
                            {{ form_row(form.nationality) }}<br><hr>
                            {{ form_row(form.address) }}
                            {{ form_row(form.postal_code) }}
                            {{ form_row(form.city) }}
                            {{ form_row(form.phone_number) }}
                            {{ form_row(form.mobile_phone_number) }}<br><hr>
                            {{ form_row(form.email) }}
                            {{ form_row(form.plainPassword) }}
                            {{ form_row(form.plainPassword) }}
                            <button type="submit" class="button button_1 intro_button trans_200">S'inscrire</button><br><br>
                        </div>
                        {{ form_end(form) }}
                    </div>

                </form>
            </div>
        </div>
    </div>
</div>

